@model IEnumerable<EmployeeManagement.Models.Employee>

@{
    ViewData["Title"] = "Employee Report";
}

<div class="container mt-5">
    <h3 class="text-center mb-4">Employee Report</h3>

    <!-- Date Range and Search Form -->
    <form method="get" asp-action="GenerateReport" class="row mb-4">
        <div class="col-md-3">
            <input type="date" name="fromDate" class="form-control" value="@ViewData["FromDate"]" />
        </div>
        <div class="col-md-3">
            <input type="date" name="toDate" class="form-control" value="@ViewData["ToDate"]" />
        </div>
        <div class="col-md-3">
            <input type="text" name="searchKeyword" class="form-control" placeholder="Search by name or contact" value="@ViewData["SearchKeyword"]" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Generate Report</button>
        </div>
    </form>

    <!-- Employee Table -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Employee Code</th>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeCode</td>
                    <td>@employee.FirstName @employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.ContactNo</td>
                    <td>@employee.Dob.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination justify-content-center">
            @for (var i = 1; i <= ViewData["TotalPages"] as int?; i++)
            {
                <li class="page-item @(i == (ViewData["CurrentPage"] as int? ? ViewData["CurrentPage"] : 1) ? "active" : "")">
                    <a class="page-link" asp-action="GenerateReport" asp-route-page="@i" asp-route-fromDate="@ViewData["FromDate"]" asp-route-toDate="@ViewData["ToDate"]" asp-route-searchKeyword="@ViewData["SearchKeyword"]">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
