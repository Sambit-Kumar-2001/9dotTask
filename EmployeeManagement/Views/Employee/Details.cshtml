@model EmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <img src="@(!string.IsNullOrEmpty(Model.PhotoPath) ? Url.Content(Model.PhotoPath) : "https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?auto=format&fit=crop&w=120&q=80")"
             alt="Employee Photo"
             class="rounded-circle shadow"
             style="width: 120px; height: 120px; object-fit: cover; border: 2px solid #ccc;" />
        <h3 class="mt-3 text-primary fw-semibold">@($"{Model.FirstName} {Model.MiddleName} {Model.LastName}")</h3>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    Personal Information
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Employee Code</dt>
                        <dd class="col-sm-8">@Model.EmployeeCode</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Model.Dob.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">Contact No</dt>
                        <dd class="col-sm-8">@Model.ContactNo</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            @if (Model.Educations != null && Model.Educations.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white">
                        Education Details
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Degree</th>
                                    <th>Passing Year</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var edu in Model.Educations)
                                {
                                    <tr>
                                        <td>@edu.Degree</td>
                                        <td>@edu.PassingYear</td>
                                        <td>@edu.Percentage %</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 ms-2">Edit</a>
    </div>
</div>
